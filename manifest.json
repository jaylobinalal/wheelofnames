{
  "manifest_version": 3,
  "name": "Wheel of Names Rigger",
  "version": "1.0.0",
  "description": "Rig wheelofnames.com to always land on your selected winner",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://wheelofnames.com/*",
    "https://www.wheelofnames.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://wheelofnames.com/*",
        "https://www.wheelofnames.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
